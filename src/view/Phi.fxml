<TabPane prefHeight="600.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" tabMinWidth="100.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PhiController">
  <tabs>
    <Tab text="Tạo phí">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <bottom>
                  <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#dangKy" prefWidth="100.0" text="Đăng ký" />
                        <Button mnemonicParsing="false" onAction="#lamMoi" prefWidth="100.0" text="Làm mới" />
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </HBox>
               </bottom>
               <center>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <GridPane layoutX="331.0" layoutY="131.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columnConstraints>
                            <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="175.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints vgrow="ALWAYS" />
                            <RowConstraints vgrow="ALWAYS" />
                            <RowConstraints vgrow="ALWAYS" />
                              <RowConstraints vgrow="ALWAYS" />
                          </rowConstraints>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                           <children>
                              <Label text="Mã phí*:" />
                              <Label text="Tên phí*:" GridPane.rowIndex="1" />
                              <Label text="Loại phí*:" GridPane.rowIndex="2" />
                              <Label text="Mức thu trên một nhân khẩu:" GridPane.rowIndex="3" />
                              <TextField fx:id="textMaPhi" GridPane.columnIndex="1" />
                              <TextField fx:id="textTenPhi" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <ComboBox fx:id="cbLoaiPhi" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="textMucThu" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                     </children>
                  </AnchorPane>
               </center>
            </BorderPane>
         </content></Tab>
    <Tab text="Danh sách phí">
         <content>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <BorderPane fx:id="paneDSPhi" prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#timKiemPhi" prefWidth="100.0" text="Tìm kiếm" />
                              <TextField fx:id="textTimKiemPhi" prefWidth="200.0" promptText="Điền thông tin tìm kiếm" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </HBox>
                     </top>
                     <center>
                        <TableView fx:id="tvDSPhi" onMouseClicked="#xemChiTietPhi" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <columns>
                            <TableColumn fx:id="colMaPhi" prefWidth="75.0" text="Mã phí" />
                            <TableColumn fx:id="colTenPhi" prefWidth="75.0" text="Tên phí" />
                              <TableColumn fx:id="colLoaiPhi" prefWidth="75.0" text="Loại phí" />
                              <TableColumn fx:id="colMucThu" prefWidth="75.0" text="Mức thu trên một nhân khẩu" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </center>
                  </BorderPane>
                  <BorderPane fx:id="paneChiTietPhi" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" visible="false">
                     <center>
                        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER_RIGHT" spacing="20.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="25.6" text="Tổng thu: " textFill="RED">
                                             <font>
                                                <Font name="System Bold Italic" size="12.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="lblTongThu" prefHeight="25.6" text="0" textFill="RED">
                                             <font>
                                                <Font name="System Bold Italic" size="12.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <padding>
                                          <Insets left="10.0" />
                                       </padding>
                                    </HBox>
                                    <Button mnemonicParsing="false" onAction="#timKiemThuPhi" prefWidth="100.0" text="Tìm kiếm" />
                                    <TextField fx:id="textTimKiemThuPhi" prefWidth="200.0" promptText="Điền thông tin tìm kiếm" />
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <TableView fx:id="tvDSThuPhi" editable="true" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="colSoHoKhau" prefWidth="75.0" text="Số hộ khẩu" />
                                    <TableColumn fx:id="colCCCD" prefWidth="75.0" text="CCCD" />
                                    <TableColumn fx:id="colHoTen" prefWidth="75.0" text="Họ tên" />
                                    <TableColumn fx:id="colDiaChi" prefWidth="75.0" text="Địa chỉ" />
                                    <TableColumn fx:id="colSoTienDaDong" prefWidth="75.0" text="Số tiền đã đóng" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </center>
                     <top>
                        <VBox spacing="20.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#quayLaiDanhSachPhi" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Quay lại danh sách phí">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@image/12029023.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </VBox>
                     </top>
                     <bottom>
                        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#xoaPhi" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@image/6861362.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </HBox>
                     </bottom>
                  </BorderPane>
               </children>
            </StackPane>
         </content></Tab>
  </tabs>
</TabPane>
