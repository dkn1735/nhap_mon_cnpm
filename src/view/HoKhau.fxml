<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0" fx:controller="controller.HoKhauController" styleClass="content-root">
   <children>
      <BorderPane fx:id="paneDSHoKhau" prefHeight="200.0" prefWidth="200.0">
         <center>
            <TableView fx:id="tvDSHoKhau" onMouseClicked="#xemChiTietHoKhau" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" styleClass="content-table">
              <columns>
                <TableColumn fx:id="colSoHoKhau" prefWidth="75.0" text="Số hộ khẩu" />
                <TableColumn fx:id="colTenChuHo" prefWidth="75.0" text="Tên chủ hộ" />
                  <TableColumn fx:id="colDiaChi" prefWidth="75.0" text="Địa chỉ" />
                  <TableColumn fx:id="colSLThanhVien" prefWidth="75.0" text="Số lượng thành viên" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <top>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#timKiem" prefWidth="100.0" text="Tìm kiếm" styleClass="content-button" />
                  <TextField fx:id="textTimKiem" prefWidth="200.0" promptText="Số hộ khẩu/chủ hộ/ địa chỉ" styleClass="content-text-field" />
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
      <BorderPane fx:id="paneChiTietHoKhau" prefHeight="200.0" prefWidth="200.0" visible="false">
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#quayLaiDSHoKhau" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Danh sách hộ khẩu">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@image/12029023.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <TableView fx:id="tvChiTietHoKhau" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" styleClass="content-table">
              <columns>
                <TableColumn fx:id="colHoTenThanhVien" prefWidth="75.0" text="Họ tên thành viên" />
                <TableColumn fx:id="colQHChuHo" prefWidth="75.0" text="Quan hệ chủ hộ" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <bottom>
            <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#chinhSuaHoKhau" prefWidth="100.0" text="Chỉnh sửa" styleClass="content-button" />
                  <Button mnemonicParsing="false" onAction="#xoaHoKhau" prefWidth="100.0" text="Xóa" styleClass="content-button" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
